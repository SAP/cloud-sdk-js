{
  "name": "commit-and-tag",
  "version": "1.0.0",
  "description": "Commits all changes and tags the new version.",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "postcompile": "ncc build lib/build-packages/commit-and-tag/index.js --out ../../.github/actions/commit-and-tag/",
    "lint": "eslint --ignore-pattern '!index.ts' && prettier --check **/*.ts",
    "lint:fix": "eslint --ignore-pattern '!index.ts' --fix --quiet && prettier --write **/*.ts",
    "check:dependencies": "depcheck --skip-missing=true .",
    "all": "yarn && yarn run lint && yarn run compile"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@changesets/get-release-plan": "^4.0.4",
    "@changesets/git": "^3.0.1",
    "@sap-cloud-sdk/util": "^3.20.0",
    "execa": "^5.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "~5.5.4"
  }
}
