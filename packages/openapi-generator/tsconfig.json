{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "es2017",
    "composite": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist/**/*",
    "test/**/*",
    "**/*.spec.ts",
    "node_modules/**/*"
  ]
}
