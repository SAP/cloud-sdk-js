{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist/**/*",
    "test/**/*",
    "**/*.spec.ts",
    "node_modules/**/*"
  ],
  "references": [
    {"path": "../../packages/core"},
    {"path": "../../packages/util"}
  ]
}
