{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "diagnostics": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSources": false,
    "strict": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist/**/*",
    "test/**/*",
    "**/*.spec.ts",
    "node_modules/**/*"
  ]
}
