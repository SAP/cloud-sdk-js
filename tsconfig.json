{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,

    "moduleResolution": "Node16",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSources": false
  }
}
