{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ESNext"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSources": false
  }
}
