{
  "extends": "./tsconfig.json",
  "include": [
    "./packages/util/**/*",
    "./packages/resilience/**/*",
    "./packages/odata-common/**/*",
    "./packages/odata-v2/**/*",
    "./packages/odata-v4/**/*",
    "./packages/connectivity/**/*",
    "./packages/http-client/**/*",
    "./packages/openapi/**/*",
    "./packages/generator-common/**/*",
    "./packages/generator/**/*",
    "./packages/openapi-generator/**/*",
    "./packages/test-util/**/*",
    "./packages/temporal-de-serializers/**/*"
  ],
  "exclude": ["**/*.spec.ts"],
  "references": [
    {
      "path": "./packages/util"
    },
    {
      "path": "./packages/resilience"
    },
    {
      "path": "./packages/odata-common"
    },
    {
      "path": "./packages/odata-v2"
    },
    {
      "path": "./packages/odata-v4"
    },
    {
      "path": "./packages/connectivity"
    },
    {
      "path": "./packages/http-client"
    },
    {
      "path": "./packages/generator-common"
    },
    {
      "path": "./packages/openapi"
    },
    {
      "path": "./packages/generator"
    },
    {
      "path": "./packages/openapi-generator"
    },
    {
      "path": "./packages/test-util"
    },
    {
      "path": "./packages/temporal-de-serializers"
    }
  ],
  "typedocOptions": {
    "out": "knowledge-base/api-reference",
    "entryPoints": [
      "packages/util/src/index.ts",
      "packages/resilience/src/index.ts",
      "packages/connectivity/src/index.ts",
      "packages/http-client/src/index.ts",
      "packages/odata-common/src/index.ts",
      "packages/odata-v2/src/index.ts",
      "packages/odata-v4/src/index.ts",
      "packages/openapi/src/index.ts",
      "packages/generator/src/index.ts",
      "packages/generator-common/src/index.ts",
      "packages/openapi-generator/src/index.ts",
      "packages/test-util/src/index.ts",
      "packages/temporal-de-serializers/src/index.ts"
    ],
    "name": "SAP Cloud SDK for JavaScript",
    "readme": "DOCUMENTATION.md",
    "theme": "default",
    "includeVersion": true,
    "hideGenerator": true,
    "excludePrivate": true,
    "treatWarningsAsErrors": true,
    "validation": {
      "invalidLink": true
    },
    "navigation": {
      "includeFolders": false
    }
  }
}
