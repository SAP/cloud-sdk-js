{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    ".prettierrc",
    ".eslintrc.js",
    ".prettierignore",
    ".gitignore",
    "tsconfig.json"
  ],
  "tasks": {
    "compile": {
      "dependsOn": ["^compile"]
    },
    "test": {
      "dependsOn": ["^compile", "^generate"]
    },
    "check": {
      "dependsOn": ["^compile", "check:dependencies", "check:public-api"]
    },
    "@sap-cloud-sdk/connectivity#test": {
      "dependsOn": [
        "@sap-cloud-sdk/util#test",
        "@sap-cloud-sdk/resilience#test",
        "@sap-cloud-sdk/mail-client#test",
        "@sap-cloud-sdk/openapi#test",
        "@sap-cloud-sdk/http-client#test",
        "@sap-cloud-sdk/temporal-de-serializers#test",
        "@sap-cloud-sdk/generator#test",
        "@sap-cloud-sdk/odata-common#test",
        "@sap-cloud-sdk/odata-v2#test",
        "@sap-cloud-sdk/odata-v4#test",
        "@sap-cloud-sdk/openapi-generator#test",
        "@sap-cloud-sdk/test-util#test"
      ]
    },
    "readme": {
      "dependsOn": ["@sap-cloud-sdk/util#compile"],
      "outputs": ["README.md"]
    },
    "check:dependencies": {
      "dependsOn": ["^compile"],
      "outputs": []
    },
    "check:public-api": {
      "dependsOn": ["@sap-cloud-sdk/util#compile"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": ["src/**", "test/**", "*.md"]
    },
    "generate": {
      "dependsOn": ["^compile"],
      "outputs": ["*-service/**", "**/*-service/**", "**/*-entity.ts"]
    }
  }
}
