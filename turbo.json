{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "globalDependencies": [
    ".prettierrc",
    ".eslintrc.js",
    ".prettierignore",
    ".gitignore",
    "tsconfig.json"
  ],
  "pipeline": {
    "compile": {
      "dependsOn": ["^compile"]
    },
    "test": {
      "dependsOn": ["^compile", "^generate"]
    },
    "check": {
      "dependsOn": ["^test", "check:dependencies", "check:public-api"]
    },
    "readme": {
      "dependsOn": ["@sap-cloud-sdk/util#compile"],
      "outputs": ["README.md"]
    },
    "check:dependencies": {
      "dependsOn": ["^compile"],
      "outputs": []
    },
    "check:public-api": {
      "dependsOn": ["@sap-cloud-sdk/util#compile"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": ["src/**", "test/**", "*.md"]
    },
    "generate": {
      "dependsOn": ["^compile"],
      "outputs": ["*-service/**", "**/*-service/**", "**/*-entity.ts"]
    }
  }
}
